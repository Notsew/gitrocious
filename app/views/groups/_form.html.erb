<%= form_for(@group) do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% @group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field form-group">
    <%= f.label :user_ids,  "Users" %>:
    <%= f.collection_select(:user_ids, User.all, :id, :name, {}, {:class => "chosen-select form-control", :multiple => true, "data-placeholder"=>"Select some users..."}) %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-success" %>
    <%= link_to 'Back', groups_path, :class => "btn btn-danger" %>
  </div>
<% end %>
