<%= form_for(@user, html: { role: "form" }) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :name %>:
    <%= f.text_field :name, :class =>"form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :group_ids,  "Groups" %>:
    <%= f.collection_select(:group_ids, Group.all, :id, :name, {}, {:class => "chosen-select form-control", :multiple => true, "data-placeholder"=>"Select some groups..."}) %>
  </div>
  <div class="field form-group">
    <%= f.label :repo_ids,  "Repos" %>:
    <%= f.collection_select(:repo_ids, Repo.all, :id, :name, {}, {:class => "chosen-select form-control", :multiple => true, "data-placeholder"=>"Select some repositories..."}) %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-success" %>
    <%= link_to 'Back', users_path, :class => "btn btn-danger" %>
  </div>
<% end %>
