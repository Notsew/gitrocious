<h1>Repository List</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @repos.each do |repo| %>
      <tr>
        <td><%= repo.name %></td>
        <td><%= link_to 'Show', repo, :class => "btn btn-primary" %>
        <% if(admin_user) %>
          <%= link_to 'Edit', edit_repo_path(repo), :class => "btn btn-warning" %>
          <%= link_to 'Destroy', repo, method: :delete, data: { confirm: "This is irreversible! Are you sure you want to delete #{repo.name}?" }, :class => "btn btn-danger" %>
        <% end %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%if admin_user %>
  <%= link_to 'New Repo', new_repo_path, :class =>"btn btn-success" %>
<% end %>