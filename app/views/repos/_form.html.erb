<%= form_for(@repo) do |f| %>
  <% if @repo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@repo.errors.count, "error") %> prohibited this repo from being saved:</h2>

      <ul>
      <% @repo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% if(type == "New") %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <% end %>
   <div class="field form-group">
    <%= f.label :user_ids,  "Users" %>:
    <%= f.collection_select(:user_ids, User.all, :id, :name, {}, {:class => "chosen-select form-control", :multiple => true, "data-placeholder"=>"Select some users..."}) %>
  </div>
   <div class="field form-group">
    <%= f.label :group_ids,  "Groups" %>:
    <%= f.collection_select(:group_ids, Group.all, :id, :name, {}, {:class => "chosen-select form-control", :multiple => true, "data-placeholder"=>"Select some groups..." }) %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-success" %>
    <%= link_to 'Back', repos_path, :class => "btn btn-danger" %>
  </div>
<% end %>
