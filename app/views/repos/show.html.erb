<h2><%= @repo.name %></h2>
<div>
	<strong>Branches:</strong>
	<ul>
		<% @repo.branches.each do |branch| %>
			<li><%= branch %>: <%= link_to 'Download Branch', repo_download_path(@repo, branch) %></li>
		<% end %>
	</ul>
</div>
<div>
	<strong>Users:</strong>
	<ul>
		<% @repo.users.each do |user| %>
			<% if admin_user %>
				<li><%= link_to user.name, user_path(user) %></li>
			<% else %>
				<li><%= user.name %></li>
			<% end %>
		<% end %>
	</ul>
</div>
<div>
	<strong>Groups:</strong>
	<ul>
		<% @repo.groups.each do |group| %>
			<% if admin_user %>
				<li><%= link_to group.name, group_path(group) %></li>
			<% else %>
				<li><%= group.name %></li>
			<% end %>
		<% end %>
	</ul>
</div>
<% if(admin_user) %>
	<%= link_to 'Edit', edit_repo_path(@repo), :class => "btn btn-warning" %> 
<% end %>
<%= link_to 'Back', repos_path, :class => "btn btn-danger" %>
